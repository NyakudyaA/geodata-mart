{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run docker-compose up",
      "type": "shell",
      "command": "docker-compose -f ${workspaceFolder}/docker-compose.yml --env-file ${workspaceFolder}/.dev.env up -d --build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Run docker-compose down",
      "type": "docker-compose",
      "dockerCompose": {
        "down": {
          "removeVolumes": true
        },
        "files": [
          "${workspaceFolder}/docker-compose.yml"
        ]
      }
    }
  ],
}
